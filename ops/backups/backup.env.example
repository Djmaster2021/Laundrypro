# Ruta donde se guardaran los .dump
BACKUP_DIR=/var/backups/laundrypro

# Cadena de conexion de PostgreSQL, p.ej.
# postgresql://laundrypro:SUPERSECRETO@127.0.0.1:5432/laundrypro
DATABASE_URL=postgresql://user:password@127.0.0.1:5432/laundrypro

# Dias de retencion de respaldos diarios
RETENTION_DAYS=14

# Cantidad de archivos de prueba de restauracion que se conservaran
RESTORE_RETENTION=6

# DB temporal para validar restauracion mensual
RESTORE_DB_NAME=laundrypro_restore_check
